{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true
  },
  "include": [
    "playground/**/*.ts",
    "playground/**/*.d.ts",
    "playground/**/*.vue",
    "src",
    "vite.config.ts"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
